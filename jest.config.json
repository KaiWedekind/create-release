{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "collectCoverage": true,
  "coverageReporters": ["lcov", "text-summary"],
  "collectCoverageFrom": ["src/**/*.ts", "!src/**/index.ts"],
  "coveragePathIgnorePatterns": ["/node_modules/", "/__tests__/"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "testPathIgnorePatterns": ["/node_modules/"]
}
